#!/bin/env sh --tool

[ ! -d "$dir" ] && { echo "Error: directory not found"; exit 1; }

exec tree -I 'node_modules|.*' "$dir"

---

name: tree
description: "List directory tree"
parameters:
	type: object
	properties:
		dir:
			type: string
			description: "Base directory"
			default: "."
	required: []
