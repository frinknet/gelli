#!/usr/bin/env sh
set -eu

# DEF: {"name":"ff","description":"Find files deep in a directory filtered by pattern (uses find internally)","parameters":{"type":"object","properties":{"pattern":{"type":"string","description":"optional glob pattern", "default": "*"},"dir":{"type":"string","description":"Base directory","default":"."}},"required":[]}}

canonpath() {
  local dir=$(echo "$PWD/./${1#$PWD}" | awk -F/ '
    {
      n = split($0, a, "/")
      out = ""
      for(i=1;i<=n;i++){
        if(a[i]=="."||a[i]=="") continue
        else if(a[i]=="..") sub("/[^/]+$", "", out)
        else out=out"/"a[i]
      }
      print out ? out : "/"
    }
  ')
  echo ".${dir#$PWD}"
}

pat="$(echo "${1:-"{}"}" | jq -r '.pattern // empty')"

dir="$(echo "${1:-"{}"}" | jq -r '.dir // "."')"
dir=$(canonpath "$dir")

case "$dir" in
  .|./*) ;; *) echo "Error: outside work dir"; exit 1; ;;
esac

[ ! -d "$dir" ] && { echo "Error: directory not found"; exit 1; }

find "$dir" -ipath "*$pat*" -type f ! -path "*/.*/*" ! -path "*/node_modules/*" 2>/dev/null | sort -u
